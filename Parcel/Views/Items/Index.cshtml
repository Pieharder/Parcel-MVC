@using Parcel.Models;

<h1>The Not Shitty Parcel Delivery Service</h1>

@if (Model.Count == 0)
{
  <p>You must enter parcel details!</p>
}
@foreach (Item item in Model)
{
  <ul>
    <li>@item.ParcelLength</li>
    <li>@item.ParcelWidth</li>
  </ul>
}
<a href="/parcel/new">Send your package!</a>