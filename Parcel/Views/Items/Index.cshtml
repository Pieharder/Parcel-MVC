@using Parcel.Models;

<h1>The Slightly Less Shitty Parcel Delivery Service</h1>

@if (Model.Count == 0)
{
  <p>You must enter parcel details!</p>
}
@foreach (Item item in Model)
{
  <ul>
    <p>Your Length: @item.ParcelLength</p>
    <p>Your Width: @item.ParcelWidth</p>
    <p>Your Height: @item.ParcelHeight</p>

    <p>Total Price: <strong>@item.ParcelPrice</strong></p>
  </ul>
}
<a href="/parcel/new">Send your package!</a>